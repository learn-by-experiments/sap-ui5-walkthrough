<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ui5.walkthrough.controller.HelloPanel"
>
    <Panel
        headerText="{i18n>helloPanelTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <Button
                text="{i18n>showHelloButtonText}"
                press=".onOpenDialog"
                class="customButton"
            />
            <Input
                value="{/name}"
                description="Input say : {/name}"
                valueLiveUpdate="true"
                width="60%"
            />
            <Text
                text="Hello {/name}"
                class="sapUiSmallMargin customText"
            />
            <FormattedText
                htmlText="Hello {/name}"
                class="sapUiSmallMargin sapThemeHighlight-asColor customText"
            />
        </content>
    </Panel>
</mvc:View>
