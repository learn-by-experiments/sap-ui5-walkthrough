<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ui5.walkthrough.controller.App"
>
    <Shell>
        <App class="sapUi5AppWalkthrough">
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                        <Panel
                            headerText="{i18n>helloPanelTitle}"
                            class="sapUiResponsiveMargin"
                            width="auto"
                        >
                            <content>
                                <Button
                                    text="{i18n>showHelloButtonText}"
                                    press=".onShowHello"
                                    class="customButton"
                                />
                                <Input
                                    value="{/name}"
                                    description="Input say : {/name}"
                                    valueLiveUpdate="true"
                                    width="60%"
                                />
                                <Text
                                    text="Hello {/name}"
                                    class="sapUiSmallMargin customText"
                                />
                                <FormattedText
                                    htmlText="Hello {/name}"
                                    class="sapUiSmallMargin sapThemeHighlight-asColor customText"
                                />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
